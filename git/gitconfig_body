[push]
	default = upstream
[alias]
	prod = checkout production
	go = !git pull --progress -v --rebase=false && git commit -v && git push;
	drb = push -u origin
	dlb = branch -d
	clb = checkout -b
	crb = push -u origin
	mb = !git prod && git merge --noff --no-commit
	cd = checkout
	cp = cherry-pick
[color]
	ui = auto
[commit]
	verbose = 1
[merge]
	stat = true
	tool = diffconflicts
[rerere]
	enabled = true
[mergetool "diffconflicts"]
	cmd = ~/.dotfiles/bin/diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
[mergetool]
	keepBackup = false
